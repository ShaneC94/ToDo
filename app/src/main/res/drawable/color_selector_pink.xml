<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/task_pink"/>
            <stroke android:width="3dp" android:color="@color/meadow_accent_dark"/>
        </shape>
    </item>
    <!-- Default -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/task_pink"/>
            <stroke android:width="2dp" android:color="@color/main_text"/>
        </shape>
    </item>
</selector>
